#ifndef INC_BSP_H_
#define INC_BSP_H_

/* INCLUDES */
#include "main.h"
#include "string.h"

#include "interrupcao.h"
#include "can.h"
#include "led.h"

#include <stdbool.h>


/* STRUCTURES */
typedef enum
{
	init = 0,
	idle,
	run,
	receive_ready
}bsp_state_e;

typedef struct
{
	bsp_state_e state;

	led_s led;
}bsp_s;

/* VARIABLES */
extern TIM_HandleTypeDef htim1;
extern bsp_s bsp;


/* FUNCTION PROTOTYPES */
void BSP_init(void);
void bsp_main(void);

#endif /* INC_BSP_H_ */
