#ifndef INC_CAN_H_
#define INC_CAN_H_

/* STRUCTURES */

typedef struct
{
	uint8_t altura_msb;
	uint8_t altura_lsb;
	uint8_t peso_msb;
	uint8_t peso_lsb;
	uint8_t status;

}id_can_0x100_t;

typedef struct
{
	uint8_t  payload[8];
	uint8_t  tensao;
	uint32_t horimetro;
}id_can_0x200_t;

/* FUNCTIONS PROTOTYPE */
void can_reception(void);
void can_simulation_transmition(uint8_t packet_num);

#endif /* INC_CAN_H_ */
