#ifndef INC_CAN_H_
#define INC_CAN_H_

/* STRUCTURES */

typedef struct
{
	uint8_t  payload[8];
	uint16_t altura;
	uint16_t peso;
	uint8_t  status_flags : 3;
}id_can_0x100_t;

typedef struct
{
	uint8_t  payload[8];
	uint8_t  tensao;
	uint32_t horimetro;
}id_can_0x200_t;

/* FUNCTIONS PROTOTYPE */
void can_receive(void);

#endif /* INC_CAN_H_ */
