#ifndef INC_LED_H_
#define INC_LED_H_

/* INCLUDES */
#include "stdbool.h"

/* STRUCTURES */
typedef enum
{
	init = 0,
	turn_off,
	turn_on
}led_e;

typedef struct
{
	led_e state;

	bool status;

	uint16_t counter;

}led_s;

/* FUNCTIONS PROTOTYPE */
void led_init(void);
void led_turn_on(void);
void led_turn_off(void);

void led_handle(void);

#endif /* INC_LED_H_ */
